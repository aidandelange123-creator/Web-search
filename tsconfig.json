{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,  // Don't emit files during type checking
    "jsx": "react"   // Support JSX in .tsx files
  },
  "include": [
    "script.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}